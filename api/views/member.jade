include ./mixins.jade

doctype html
html
	include ./includes/head.jade
	body
		include ./includes/navbar.jade
		div
			include ./includes/alert_head.jade
		div
			if user
				form(action='/api/messages/'+ user.username , method='POST')
					label Email
						input#email(type='text', name='email', value=user.email)
					label Email Type
						select(name="emailtype2")
							label Custom
								option(value="Custom") Custom
							label Verify
								option(value="VerifyAccount") Verify
							label Annual Fees Reminder
								option(value="AnnualFeeReminder") Annual Fees Reminder
							label Desk Rent Fee Reminder
								option(value="DeskRentFeeReminder") Desk Rent Fee Reminder
							label Annual Subscription Demand
								option(value="annualSubscriptionDemand") Annual Subscription Demand
							label Annual Subscription Overdue
								option(value="annualSubscriptionOverdue") Annual Subscription Overdue
					label First Name
						input#firstname(type='text', name='firstname', value=user.first_name)
					label Last Name
						input#lastname(type='text', name='lastname', value=user.last_name)
					label Subject
						input#subject(type='text', name='subject', placeholder='subject')
					label Message
						input#emailbody(type='text', name='contents', placeholder='emailbody')
					button(type='submit') Submit
	+foot()
