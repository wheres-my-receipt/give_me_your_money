include ./mixins.jade

doctype html
html
	include ./includes/head.jade
	body
		include ./includes/navbar.jade
		if alert && alert.isError
			div(class="alert alert-warning alert-dismissible" role="alert")
				button.close(type="button" data-dismiss="alert" aria-label="Close") &times;
				strong #{alert.alert}
		if alert && alert.isSuccess
			div(class="alert alert-success alert-dismissible" role="alert")
				button.close(type="button" data-dismiss="alert" aria-label="Close") &times;
				strong #{alert.alert}
		div
			form(action='/api/messages/'+ user.username , method='POST')
				label Email
					input#email(type='text', name='email', value=user.email)
				label Email Type
					input#email(type='text', name='emailtype', value="customMessage")
					select(name="emailtype2")
						label Verify
							option(value="VerifyAccount") Verify
						label Annual Fees
							option(value="AnnualFeeReminder") Annual Fees Reminder
						label Desk Rent Fee Reminder
							option(value="DeskRentFeeReminder") Desk Rent Fee Reminder
						label Custom
							option(value="Custom") Custom
				label First Name
					input#firstname(type='text', name='firstname', value=user.first_name)
				label Last Name
					input#lastname(type='text', name='lastname', value=user.last_name)
				label Subject
					input#subject(type='text', name='subject', placeholder='subject')
				label Message
					input#emailbody(type='text', name='contents', placeholder='emailbody')
				button(type='submit') Submit
	+foot()
