include ./mixins.jade

doctype html
html
	include ./includes/head.jade
	body
		include ./includes/navbar.jade
		.jumbotron
			.container
				.row
					.col-xs-12
						include ./includes/alert_head.jade
			.container
				.row
					div.admintitle.col-xs-12
						h2 Member Administration Pages
						div
							for member in members
								.panel.panel-default
									.panel-heading(role="tab")
										h3.panel-title
											a(href='/admin/member/'+member.username) #{member.first_name} #{member.last_name}
												span.sendicon
													a(href='/admin/message/'+member.username)
														span.glyphicon.glyphicon-envelope
	+foot()
