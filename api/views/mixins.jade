mixin transaction(deets)
	li.transaction
		p From: #{deets.name}
		p Date: #{deets.date}
		p Amount: #{deets.amount}

mixin message(deets)
	li.message
		h2 Subject: #{deets.subject}
		h3 Date: #{deets.date}
		h4 To: #{deets.to}
		h4 From: #{deets.from}
		p #{deets.contents}

mixin foot(filename)
	script(src='public/lib/jquery-2.1.3.min.js')
	script(src='public/lib/bootstrap.min.js')
	if filename
		script(src='public/scripts/' + filename + '.js')
