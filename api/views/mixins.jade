mixin transaction(deets)
	li.transaction
		p From: #{deets.name}
		p Date: #{deets.date}
		p Amount: #{deets.amount}

mixin message(deets)
	li.message
		h2 Subject: #{deets.subject}
		h3 Date: #{deets.date}
		h4 To: #{deets.to}
		h4 From: #{deets.from}
		p #{deets.contents}

mixin foot(fileArray)
	script(src='/lib/jquery-2.1.3.min.js')
	script(src='/lib/bootstrap.min.js')
	if fileArray
		each file in fileArray
			script(src='/scripts/' + file + '.js')

mixin recipient(user, listArray)
	if listArray
		h3 Send a Mail List Email
			.control-group
				.controls
					label.label(for="email") Email Address
					br
					select.form-control(name="email")
						each val, index in listArray
							option(value=val.name) #{val.name}
	else
		h3 Send #{user.first_name} #{user.last_name} a message
		.control-group
			.controls
				label.label(for="email") Email Address
					input.form-control(type="text" name="email" value=user.email)
